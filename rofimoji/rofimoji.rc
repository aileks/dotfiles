# rofimoji configuration
# See: https://github.com/fdw/rofimoji

# Action when selecting an emoji
# Options: type, copy, clipboard, unicode, copy-unicode, print, menu
action = copy

# Skin tone modifier
# Options: neutral, light, medium-light, moderate, dark-brown, dark, ask
skin-tone = neutral

# Maximum recently used emojis (0-10)
max-recent = 5

# Prompt text
prompt = 

# Use rofi selector (default on X11)
selector = rofi

# Clipboard tool (auto-detected, but can override)
# clipboarder = xclip

# Typing tool (auto-detected, but can override)
# typer = xdotool
