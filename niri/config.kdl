// niri config (KDL)

environment {
    XDG_CURRENT_DESKTOP "niri"
    GTK_CSD "0"
    TERMINAL "wezterm"
    SSH_AUTH_SOCK "/home/aileks/.1password/agent.sock"
}

cursor {
    xcursor-theme "Adwaita"
    xcursor-size 34
}

input {
    mod-key "Super"

    keyboard {
        repeat-delay 300
        repeat-rate 50
        numlock
    }

    touchpad {
        tap
        natural-scroll
        accel-profile "flat"
        accel-speed 0.0
    }

    mouse {
        accel-profile "flat"
        accel-speed 0.0
    }

    focus-follows-mouse
}

output "HDMI-A-1" {
    mode "3840x2160@60"
    scale 2
    transform "90"
    position x=0 y=0
}

output "DP-1" {
    mode "2560x1440@200"
    scale 1.25
    position x=1080 y=384
    focus-at-startup
}

layout {
    gaps 6

    default-column-width { proportion 0.5; }

    focus-ring {
        width 2
        active-color "#b14242"
        inactive-color "#535353"
        urgent-color "#df6464"
    }

    border {
        off
    }
}

hotkey-overlay {
    skip-at-startup
}

prefer-no-csd
screenshot-path "~/Pictures/screenshots/screenshot-%Y%m%d-%H%M%S.png"

animations {
    workspace-switch {
        spring damping-ratio=1.0 stiffness=900 epsilon=0.0001
    }

    horizontal-view-movement {
        spring damping-ratio=1.0 stiffness=900 epsilon=0.0001
    }

    window-movement {
        spring damping-ratio=1.0 stiffness=900 epsilon=0.0001
    }

    window-resize {
        spring damping-ratio=1.0 stiffness=900 epsilon=0.0001
    }

    window-open {
        duration-ms 140
        curve "ease-out-expo"
    }

    window-close {
        duration-ms 140
        curve "ease-out-quad"
    }
}

workspace "1"
workspace "2"
workspace "3"
workspace "4"
workspace "5"
workspace "6"
workspace "7"
workspace "8"
workspace "mail"

window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width {}
}

window-rule {
    match app-id=r#"^(imv|wl-color-picker|calendar-floating|btop-floating|volume-floating|qalculate-gtk)$"#
    open-floating true
}

window-rule {
    match app-id=r#".*portal.*"#
    open-floating true
}

window-rule {
    match app-id="thunar" title=r#"Rename"#
    open-floating true
}

window-rule {
    match title=r#"About|Authentication|Confirm|Configuration|Dialog|Error|Open File|Options|Preferences|Properties|Save As|Save File|Select File|Select Folder|Settings|Warning"#
    open-floating true
}

window-rule {
    match app-id="Fastmail"
    open-on-workspace "mail"
}

window-rule {
    match is-window-cast-target=true

    focus-ring {
        on
        width 3
        active-color "#df6464"
        inactive-color "#535353"
        urgent-color "#df6464"
    }

    border {
        on
        width 2
        active-color "#df6464"
        inactive-color "#535353"
        urgent-color "#df6464"
    }

    shadow {
        color "#53535370"
    }
}

layer-rule {
    match namespace="^launcher$"
    match namespace="^fuzzel$"
    geometry-corner-radius 12
    shadow {
        on
        softness 30
        spread 6
        offset x=0 y=8
        color "#00000080"
    }
}

binds {
    Mod+Shift+Slash { show-hotkey-overlay; }

    Mod+Q { close-window; }
    Mod+Shift+Q { quit; }

    Mod+Return { spawn "wezterm"; }
    Mod+D { spawn "fuzzel"; }
    Mod+E { spawn "thunar"; }
    Mod+W { spawn "helium-browser"; }
    Mod+Shift+X { spawn "~/.local/bin/lock"; }
    Mod+Shift+P { spawn "~/.local/bin/power-menu"; }
    Mod+S { spawn "signal-desktop"; }
    Mod+B { spawn "emacsclient" "-c" "-a" ""; }
    Mod+Shift+C { spawn "hyprpicker" "-a"; }

    Mod+J { focus-window-down; }
    Mod+K { focus-window-up; }
    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }

    Mod+Shift+J { move-window-down; }
    Mod+Shift+K { move-window-up; }
    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }

    Mod+R { switch-preset-column-width; }
    Mod+Shift+R { switch-preset-window-height; }
    Mod+Ctrl+R { reset-window-height; }
    Mod+F { maximize-column; }
    Mod+Shift+F { fullscreen-window; }
    Mod+Space { toggle-window-floating; }
    Mod+Tab { focus-workspace-previous; }
    Mod+Shift+V { toggle-overview; }

    Mod+Comma { focus-monitor-left; }
    Mod+Period { focus-monitor-right; }
    Mod+Shift+Comma { move-column-to-monitor-left; }
    Mod+Shift+Period { move-column-to-monitor-right; }
    Mod+Ctrl+Comma { consume-or-expel-window-left; }
    Mod+Ctrl+Period { consume-or-expel-window-right; }

    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }

    Print { screenshot; }
    Shift+Print { screenshot-window; }
    Mod+Print { screenshot-screen; }

    F9 { spawn "~/.local/bin/screenrecord" "area"; }
    Shift+F9 { spawn "~/.local/bin/screenrecord" "window"; }
    Ctrl+F9 { spawn "~/.local/bin/screenrecord" "fullscreen"; }

    XF86AudioRaiseVolume allow-when-locked=true { spawn-sh "pamixer -i 5; pkill -RTMIN+5 waybar"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn-sh "pamixer -d 5; pkill -RTMIN+5 waybar"; }
    XF86AudioMute allow-when-locked=true { spawn-sh "pamixer --toggle-mute; pkill -RTMIN+5 waybar"; }
    XF86AudioMedia allow-when-locked=true { spawn-sh "playerctl play-pause"; }
    XF86AudioPlay allow-when-locked=true { spawn-sh "playerctl play-pause"; }
    XF86AudioPrev allow-when-locked=true { spawn-sh "playerctl previous"; }
    XF86AudioNext allow-when-locked=true { spawn-sh "playerctl next"; }
}

spawn-at-startup "blueman-applet"
spawn-at-startup "solaar" "-w" "hide"
spawn-at-startup "emacs" "--daemon"
spawn-at-startup "fastmail"
spawn-at-startup "xwayland-satellite"
spawn-sh-at-startup "dbus-update-activation-environment DISPLAY WAYLAND_DISPLAY XAUTHORITY XDG_CURRENT_DESKTOP XDG_SESSION_TYPE"
