{
  "github.copilot.nextEditSuggestions.enabled": true,
  "workbench.colorTheme": "Vira Carbon High Contrast",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "editor.fontFamily": "BerkeleyMono Nerd Font",
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.mouseWheelZoom": true,
  "editor.autoIndentOnPaste": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.experimentalGpuAcceleration": "on",
  "editor.minimap.enabled": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "json.format.keepLines": true,
  "editor.fontLigatures": true,
  "editor.guides.bracketPairs": true,
  "window.zoomLevel": -0.5,
  "editor.wordWrapColumn": 120,
  "editor.rulers": [ 120 ],
  "python.analysis.typeCheckingMode": "strict",
  "[sql]": {
    "editor.formatOnSave": false
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.userWords": [
    "explainability",
    "Matplotlib",
    "Plotly",
    "tidyverse"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "chat.editing.confirmEditRequestRemoval": false,
  "git.confirmSync": false,
  "editor.minimap.maxColumn": 100,
  "editor.scrollbar.horizontal": "visible",
  "prettier.experimentalTernaries": true,
  "prettier.printWidth": 100,
  "workbench.colorCustomizations": {
    "[Vira*]": {
      "statusBar.debuggingBackground": "#80CBC433",
      "statusBar.debuggingForeground": "#80CBC4",
      "toolbar.activeBackground": "#80CBC426",
      "button.background": "#80CBC4",
      "button.hoverBackground": "#80CBC4cc",
      "extensionButton.separator": "#80CBC433",
      "extensionButton.background": "#80CBC414",
      "extensionButton.foreground": "#80CBC4",
      "extensionButton.hoverBackground": "#80CBC433",
      "extensionButton.prominentForeground": "#80CBC4",
      "extensionButton.prominentBackground": "#80CBC414",
      "extensionButton.prominentHoverBackground": "#80CBC433",
      "activityBarBadge.background": "#80CBC4",
      "activityBar.activeBorder": "#80CBC4",
      "activityBarTop.activeBorder": "#80CBC4",
      "list.inactiveSelectionIconForeground": "#80CBC4",
      "list.activeSelectionForeground": "#80CBC4",
      "list.inactiveSelectionForeground": "#80CBC4",
      "list.highlightForeground": "#80CBC4",
      "sash.hoverBorder": "#80CBC480",
      "list.activeSelectionIconForeground": "#80CBC4",
      "scrollbarSlider.activeBackground": "#80CBC480",
      "editorSuggestWidget.highlightForeground": "#80CBC4",
      "textLink.foreground": "#80CBC4",
      "progressBar.background": "#80CBC4",
      "pickerGroup.foreground": "#80CBC4",
      "tab.activeBorder": "#80CBC4",
      "tab.activeBorderTop": "#80CBC400",
      "tab.unfocusedActiveBorder": "#80CBC4",
      "tab.unfocusedActiveBorderTop": "#80CBC400",
      "tab.activeModifiedBorder": "#80CBC400",
      "notificationLink.foreground": "#80CBC4",
      "editorWidget.resizeBorder": "#80CBC4",
      "editorWidget.border": "#80CBC4",
      "settings.modifiedItemIndicator": "#80CBC4",
      "panelTitle.activeBorder": "#80CBC4",
      "breadcrumb.activeSelectionForeground": "#80CBC4",
      "menu.selectionForeground": "#80CBC4",
      "menubar.selectionForeground": "#80CBC4",
      "editor.findMatchBorder": "#80CBC4",
      "selection.background": "#80CBC440",
      "statusBarItem.remoteBackground": "#80CBC414",
      "statusBarItem.remoteHoverBackground": "#80CBC4",
      "statusBarItem.remoteForeground": "#80CBC4",
      "notebook.inactiveFocusedCellBorder": "#80CBC480",
      "commandCenter.activeBorder": "#80CBC480",
      "chat.slashCommandForeground": "#80CBC4",
      "chat.avatarForeground": "#80CBC4",
      "activityBarBadge.foreground": "#000000",
      "button.foreground": "#000000",
      "statusBarItem.remoteHoverForeground": "#000000"
    }
  },
  "workbench.iconTheme": "vira-icons-carbon",

  "vim.leader": " ",
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [ "<leader>", "f" ], "commands": [ "workbench.action.quickOpen" ] },
    { "before": [ "<leader>", "p" ], "commands": [ "workbench.action.toggleSidebarVisibility" ] },
    { "before": [ "<leader>", "e" ], "commands": [ "workbench.action.toggleSidebarVisibility" ] },
    { "before": [ "<leader>", "t" ], "commands": [ "workbench.action.toggleTerminal" ] },
    { "before": [ "<leader>", "/" ], "commands": [ "workbench.action.findInFiles" ] },
    { "before": [ "<leader>", "o" ], "commands": [ "workbench.view.outline" ] },
    { "before": [ "<leader>", "s" ], "commands": [ "workbench.action.gotoSymbol" ] },
    { "before": [ "<leader>", "c" ], "commands": [ "workbench.action.showCommands" ] },
    { "before": [ "<leader>", "d" ], "commands": [ "workbench.actions.view.problems" ] },
    { "before": [ "<leader>", "r" ], "commands": [ "editor.action.rename" ] },
    { "before": [ "<leader>", "b" ], "commands": [ "gitlens.toggleFileBlame" ] },
    { "before": [ "<leader>", "g", "a" ], "commands": [ "git.stageAll" ] },
    { "before": [ "<leader>", "g", "c" ], "commands": [ "git.commit" ] },
    { "before": [ "<leader>", "g", "p" ], "commands": [ "git.push" ] },
    { "before": [ "<leader>", "g", "l" ], "commands": [ "git.pull" ] },
    { "before": [ "<leader>", "g", "d" ], "commands": [ "workbench.action.files.openChanges" ] },
    { "before": [ "<leader>", "g", "b" ], "commands": [ "git.checkout" ] },
    { "before": [ "<leader>", "g", "t" ], "commands": [ "git.stash" ] },
    { "before": [ "<leader>", "g", "T" ], "commands": [ "git.stashPop" ] },
    { "before": [ "Y" ], "after": [ "y$" ] },
    { "before": [ "Z", "Z" ], "commands": [ "workbench.action.save" ] },
    { "before": [ "Z", "Q" ], "commands": [ "workbench.action.closeActiveEditor" ] },
    { "before": [ "<C-d>" ], "after": [ "<C-d>", "zz" ] },
    { "before": [ "<C-u>" ], "after": [ "<C-u>", "zz" ] },
    { "before": [ "g", "y", "y" ], "commands": [ "editor.action.copyLinesDownAction" ] },
    { "before": [ "g", "*" ], "commands": [ "editor.action.addSelectionToNextFindMatch" ] },
    { "before": [ "g", "#" ], "commands": [ "editor.action.addSelectionToPreviousFindMatch" ] },
    { "before": [ "L" ], "commands": [ "workbench.action.nextEditor" ] },
    { "before": [ "H" ], "commands": [ "workbench.action.previousEditor" ] },
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": [ "g", "c" ], "commands": [ "editor.action.commentLine" ] },
    { "before": [ "g", "A" ], "commands": [ "editor.action.insertCursorAtEndOfEachLineSelected" ] },
    { "before": [ ">" ], "after": [ ">", "g", "v" ] },
    { "before": [ "<" ], "after": [ "<", "g", "v" ] }
  ],

  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": [ "j", "k" ], "after": [ "<Esc>" ] },
    { "before": [ "k", "j" ], "after": [ "<Esc>" ] }
  ]
}