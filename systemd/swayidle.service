[Unit]
Description=Swayidle
PartOf=graphical-session.target
After=graphical-session.target
Requisite=graphical-session.target

[Service]
ExecStart=/usr/bin/swayidle -w timeout 600 "%h/.local/bin/lock --fork" before-sleep "%h/.local/bin/lock --fork" timeout 900 "niri msg action power-off-monitors" resume "niri msg action power-on-monitors"
Restart=on-failure

[Install]
WantedBy=graphical-session.target
