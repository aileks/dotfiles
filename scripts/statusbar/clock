#!/bin/bash
# Statusbar module: clock/date
# Left click: open calendar
# Right click: show date/time notification

case $BUTTON in
	1)
		wezterm start --class calendar-floating -- cal -3
		;;
	3)
		full_date=$(date "+%A, %B %d, %Y")
		full_time=$(date "+%I:%M:%S %p")
		notify-send "󰃰 Date & Time" "$full_date\n$full_time"
		;;
esac

icon="󰃰"
date_fmt="%a %b %d"
time_fmt="%I:%M %p"

date_str=$(date +"$date_fmt")
time_str=$(date +"$time_fmt")

printf "^c#e49a44^%s^d^ %s  ^c#c4693d^%s^d^" "$icon" "$date_str" "$time_str"
